{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
